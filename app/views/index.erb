<h1>All Robots</h1>

  <% @robots.each do |robot| %>
    <img src="https://robohash.org/<%= robot.name %>.png">
    <h3><a href="/robots/<%= robot.name %>"><%= robot.name %></a></h3>
    <a class="btn btn-default" href="/robots/<%= robot.name %>/edit">Edit</a>
    <form class="btn btn-default" action="/robots/<%= robot.name %>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Destroy Robot">
    </form><br>
  <% end %>
